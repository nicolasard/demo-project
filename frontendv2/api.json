  "components": {
    "schemas": {
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "errorDescription": {
            "type": "string"
          },
          "errorResponsesDetailsList": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ErrorResponsesDetails"
            }
          }
        }
      },
      "ErrorResponsesDetails": {
        "type": "object",
        "properties": {
          "field": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "Transaction": {
        "title": "Transactions",
        "required": [
          "amount",
          "currency",
          "date"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "amount": {
            "type": "number",
            "format": "float"
          },
          "currency": {
            "maxLength": 3,
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date-time"
          },
          "userInternalId": {
            "type": "integer",
            "format": "int32"
          },
          "description": {
            "type": "string"
          }
        },
        "description": "Transactions made."
      },
      "TotalDay": {
        "title": "TotalDay",
        "type": "object",
        "properties": {
          "day": {
            "type": "integer",
            "format": "int32"
          },
          "total": {
            "type": "number",
            "format": "double"
          }
        },
        "description": "The total amount of transactions in a day"
      },
      "Currency": {
        "title": "Currency",
        "type": "object",
        "properties": {
          "currencyCode": {
            "type": "string"
          },
          "currencyDescription": {
            "type": "string"
          },
          "currencySymbol": {
            "type": "string"
          }
        },
        "description": "The ISO 4217 currencies table."
      },
      "UserProfile": {
        "title": "User",
        "type": "object",
        "properties": {
          "fullName": {
            "type": "string",
            "example": "John Doe"
          },
          "email": {
            "type": "string",
            "example": "john@example.com"
          },
          "internalId": {
            "type": "integer",
            "format": "int32"
          },
          "defaultCurrency": {
            "$ref": "#/components/schemas/Currency"
          }
        },
        "description": "The user information in the system."
      }
    }
  }
